{
  "name": "pi-mcp-server",
  "version": "0.1.1",
  "description": "MCP server wrapping the Pi coding agent as tools",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "bin": {
    "pi-mcp-server": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "engines": {
    "node": ">=20"
  },
  "license": "MIT",
  "author": "Andreas Spannagel",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pandysp/pi-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/pandysp/pi-mcp-server/issues"
  },
  "homepage": "https://github.com/pandysp/pi-mcp-server#readme",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "pi",
    "coding-agent",
    "ai"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@mariozechner/pi-coding-agent": "^0.52.9",
    "@mariozechner/pi-ai": "^0.52.9",
    "@modelcontextprotocol/sdk": "^1.25.3"
  },
  "optionalDependencies": {
    "@anthropic-ai/sandbox-runtime": "^0.0.37"
  },
  "devDependencies": {
    "typescript": "^5.7.3",
    "@types/node": "^22.0.0",
    "vitest": "^3.2.0"
  }
}
